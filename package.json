{
  "name": "modern-notes-app",
  "homepage": "https://0reilly.github.io/modern-notes-app",
  "description": "A modern note-taking app with Vercel-inspired UI",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "node server.js",
    "start": "npm run build && npm run serve",
    "start:dev": "vite --host 0.0.0.0 --port 3003 --mode development",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "deploy:dev": "./deploy-dev.sh",
    "deploy:prod": "./deploy-prod.sh",
    "deploy:feature": "./deploy-feature.sh",
    "env:status": "./manage-environments.sh status",
    "env:logs:dev": "./manage-environments.sh logs-dev",
    "env:logs:prod": "./manage-environments.sh logs-prod"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.3",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.3",
    "marked": "^9.1.2",
    "prismjs": "^1.29.0",
    "debounce": "^1.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.2",
    "vite": "^4.3.2",
    "vite-plugin-pwa": "^0.16.4",
    "vitest": "^0.29.2"
  }
}